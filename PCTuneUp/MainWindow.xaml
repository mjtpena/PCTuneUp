<Window x:Class="PCTuneUp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCTuneUp"
        mc:Ignorable="d"
        Title="PC TuneUp" Height="700" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#1e1e2e">
    
    <Window.Resources>
        <Style x:Key="ScanItemBorder" TargetType="Border">
            <Setter Property="Background" Value="#45475a"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#89b4fa"/>
            <Setter Property="Foreground" Value="#1e1e2e"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#b4befe"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#45475a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#45475a"/>
            <Setter Property="Foreground" Value="#cdd6f4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#585b70"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#313244"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="🧹 PC TuneUp" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#cdd6f4"/>
            <TextBlock x:Name="txtStatus"
                       Text="Click 'Scan' to analyze your system" 
                       FontSize="14" 
                       Foreground="#6c7086"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Total Summary -->
        <Border Grid.Row="1" Background="#313244" CornerRadius="12" Padding="16" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total issues found:" Foreground="#6c7086" FontSize="12"/>
                    <TextBlock x:Name="txtTotalSize" Text="-- Not scanned --" Foreground="#f9e2af" FontSize="20" FontWeight="Bold"/>
                </StackPanel>
                <TextBlock x:Name="txtSelectedSize" Grid.Column="1" Text="" Foreground="#a6e3a1" FontSize="14" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Scan Results List -->
        <Border Grid.Row="2" Background="#313244" CornerRadius="12" Padding="16" Margin="0,0,0,12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="pnlScanResults">
                    <TextBlock x:Name="txtPlaceholder" 
                               Text="Scan results will appear here..." 
                               Foreground="#6c7086"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,40,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Log Output -->
        <Border Grid.Row="3" Background="#313244" CornerRadius="12" Padding="12" Margin="0,0,0,12" MaxHeight="120">
            <ScrollViewer x:Name="logScroller" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtLog" 
                           Text="" 
                           Foreground="#a6adc8"
                           FontFamily="Cascadia Code, Consolas, monospace"
                           FontSize="11"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>
        
        <!-- Progress Bar -->
        <ProgressBar x:Name="progressBar" 
                     Grid.Row="4" 
                     Height="6" 
                     Margin="0,0,0,12"
                     Background="#45475a"
                     Foreground="#a6e3a1"
                     BorderThickness="0"
                     Value="0"/>
        
        <!-- Buttons -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="btnScan" 
                    Grid.Column="0"
                    Content="🔍 Scan" 
                    Style="{StaticResource ActionButton}"
                    Click="BtnScan_Click"/>
            
            <Button x:Name="btnFix" 
                    Grid.Column="2"
                    Content="🚀 Fix Selected" 
                    Style="{StaticResource ActionButton}"
                    Background="#a6e3a1"
                    IsEnabled="False"
                    Click="BtnFix_Click"/>
            
            <Button x:Name="btnSelectAll" 
                    Grid.Column="4"
                    Content="Select All" 
                    Style="{StaticResource SecondaryButton}"
                    IsEnabled="False"
                    Click="BtnSelectAll_Click"/>
        </Grid>
    </Grid>
</Window>
